<%- layout('layouts/boilerplate.ejs') %>
<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
    <form action="/dashboard/gyms" method="POST" class="validateForm" novalidate enctype="multipart/form-data">
      <div>
        <!-- NAME -->
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="Gym Name" required />
        </div>
        <!-- LOCATION & POSTCODE -->
        <div class="mb-3">
          <label for="street" class="form-label">Street</label>
          <input type="text" name="street" id="street" class="form-control" placeholder="Street Name" required />
          <label for="postcode" class="form-label mt-2">Post Code</label>
          <input type="text" name="postcode" id="postcode" class="form-control" placeholder="Post Code" required />
        </div>
        <!-- DESCRIPTION -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" id="description" cols="30" rows="5" class="form-control" placeholder="Description" required></textarea>
        </div>
        <!-- IMAGE -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input type="file" class="form-control" name="image" id="image" multiple />
        </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Submit</button>
        <a href="/dashboard/gyms" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</div>
<script src="/scripts/validateForm.js"></script>
