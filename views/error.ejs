<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
    <% if (process.env.NODE_ENV !=="production" ) { %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= err.message%></h4>
      <hr />
      <p class="mb-0"><%= err.stack %></p>
    </div>
    <% } else { %>
    <div class="alert alert-danger text-center" role="alert">
      <h4 class="alert-heading">OOPS! Something went wrong.</h4>
      <hr />
      <p class="mb-0">An error occured while processing your request. Please try again</p>
      <p class="mb-3">or contact the system administrator if the error persists.</p>
      <p class="mb-0">Thank You</p>

      <% } %>
    </div>
  </div>
</div>
