<%- layout('layouts/boilerplate.ejs') %>

<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
    <div class="card">
      <div id="imageCarouselFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% gym.images.forEach((img, i) => { %>
            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
              <img src="<%= img.url %>" class="d-block w-100" alt="...">
            </div>
          <% }) %>
          <% if(gym.images.length >1) { %>
              <button class="carousel-control-prev" type="button" data-bs-target="#imageCarouselFade" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#imageCarouselFade" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
          <% } %>  
        </div>   
      </div>
      <div class="card-header">
          <div class="">
            <h1 class="card-title"><%= gym.name %></h1>
            <h6 class="card-subtitle text-body-secondary"><%= gym.city %>, <%= gym.postcode %></h6>
          </div> 
      </div>
        <div class="card-body">
          <div>
            <p class="card-text mb-3"><%= gym.description %></p>
          </div>
          <div class="mb-5">
            <h2 class="card-text mb-3"><b>Plans Available</b></h2>
            <div class="row">
              <!-- IF MORE THAN 1 MEMBERSHIP OR MEMBERSHIP[0]-->
              <% if(gym.plans.length> 1 || gym.plans[0]) { %>
              <!-- FOR LOOP TO DISPLAY ALL MEMBERSHIPS -->
              <% for(let plan of gym.plans) { %>
              <div class="mb-3 col-sm-12 col-md-6 col-lg-4 col-xxl-3">
                <div class="card shadow-sm p-3 bg-body rounded">
                  <div class="card-body">
                    <h5 class="card-title mb-3"><%= plan.name %></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary mb-5"><small>Â£<%= plan.price %> Per <%= plan.planType %></small></h6>
                    <div class="d-grid gap-2">
                      <button class="btn btn-light btn-sm disabled">More</button>
                    </div>
                  </div>
                </div>
              </div>
              <% } %> <% } else { %>
                <div class="mb-3 col-sm-12 col-md-6 col-lg-4 col-xxl-3">
                      <h5 class="text-secondary">No plans available</h5>
                </div>
                <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
