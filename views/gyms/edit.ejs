<%- layout('layouts/boilerplate.ejs') %>
<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
    <form action="/gyms/<%= gym._id %>?_method=PUT" method="POST" class="validateForm" novalidate>
      <div>
        <!-- NAME -->
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" id="name" class="form-control" value="<%= gym.name %>" required />
        </div>
        <!-- LOCATION & POSTCODE -->
        <div class="mb-3">
          <label for="street" class="form-label">Street</label>
          <input type="text" name="street" id="street" class="form-control" value="<%= gym.street %>" required />
          <label for="postcode" class="form-label mt-2">Post Code</label>
          <input type="text" name="postcode" id="postcode" class="form-control" value="<%= gym.postcode %>" required />
        </div>
        <!-- DESCRIPTION -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="description" id="description" cols="30" rows="5" class="form-control" required><%= gym.description %></textarea>
        </div>
        <!-- IMAGE -->
        <div class="mb-3">
          <label for="image" class="form-label">image</label>
          <input type="text" name="image" id="image" class="form-control" value="<%= gym.image %>" required />
        </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Submit</button>
        <a href="/gyms/<%= gym._id %>" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</div>
<script src="/scripts/validateForm.js"></script>
